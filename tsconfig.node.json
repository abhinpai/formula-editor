{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@component/*": ["./components/*"],
      "@views/*": ["./views/*"],
      "@appTypes/*": ["./types/*"],
      "@constants/*": ["./constants/*"],
      "@appRoute/*": ["./routes/*"]
    },
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.json"]
}
